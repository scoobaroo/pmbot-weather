# Polymarket
PRIVATE_KEY=           # Ethereum wallet private key (required for live trading)
CHAIN_ID=137           # Polygon mainnet
CLOB_API_URL=https://clob.polymarket.com
GAMMA_API_URL=https://gamma-api.polymarket.com

# Weather
OPEN_METEO_BASE_URL=https://ensemble-api.open-meteo.com/v1/ensemble
NWS_BASE_URL=https://api.weather.gov
WEATHER_API_KEY=          # WeatherAPI.com key (optional, empty = disabled)
ENABLE_HRRR=true          # NOAA HRRR via Open-Meteo (US cities only, no key needed)
DETERMINISTIC_WEIGHT=1    # Pseudo-member weight for deterministic sources

# Strategy
EDGE_THRESHOLD=0.08    # 8% minimum edge to trade
KELLY_FRACTION=0.5     # Half-kelly
MAX_POSITION_USD=50
MAX_DAILY_LOSS_USD=100
BANKROLL_USD=1000

# Operational
POLL_INTERVAL_MS=300000  # 5 minutes
DRY_RUN=true             # Set to false for live trading
LOG_LEVEL=info           # debug | info | warn | error
